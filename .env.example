# App Configuration
NEXT_PUBLIC_APP_NAME="Foursquare Camp Ajebo Church"
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL="http://localhost:3000"
NEXT_PUBLIC_ENVIRONMENT="development"

# External Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key_here

# Email Configuration
NEXT_PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id_here
NEXT_PUBLIC_EMAILJS_TEMPLATE_ID=your_emailjs_template_id_here
NEXT_PUBLIC_EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_google_analytics_id_here

# Database (for future use)
DATABASE_URL=your_database_url_here

# Security
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Streaming Configuration
NEXT_PUBLIC_STREAMING_API_URL="http://localhost:3004"
NEXT_PUBLIC_DEFAULT_STREAM_URL="https://your-stream-url.com/live"
NEXT_PUBLIC_MAX_CONCURRENT_VIEWERS="1000"

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_STREAMING="true"
NEXT_PUBLIC_ENABLE_CHAT="true"
NEXT_PUBLIC_ENABLE_PRAYER_REQUESTS="true"

# Social Media Links
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/foursquare-ajebo"
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/foursquare-ajebo"
NEXT_PUBLIC_TWITTER_URL="https://twitter.com/foursquare-ajebo"
NEXT_PUBLIC_YOUTUBE_URL="https://youtube.com/@foursquare-ajebo"

# Contact Information
NEXT_PUBLIC_CONTACT_EMAIL="info@foursquareajebo.org"
NEXT_PUBLIC_CONTACT_PHONE="+234-XXX-XXX-XXXX"
NEXT_PUBLIC_CHURCH_ADDRESS="Foursquare Camp Ajebo, Ogun State, Nigeria"

# Chat and Prayer Settings
NEXT_PUBLIC_MAX_MESSAGE_LENGTH="500"
NEXT_PUBLIC_MAX_PRAYER_REQUEST_LENGTH="1000"
NEXT_PUBLIC_CHAT_RATE_LIMIT="5"

# Venco Payment Gateway Configuration
# Get these credentials from your Venco merchant account dashboard
VENCO_API_KEY=your_venco_api_key_here
VENCO_API_SECRET=your_venco_api_secret_here
VENCO_MERCHANT_ID=your_venco_merchant_id_here
VENCO_BASE_URL=https://api.venco.com/v1

# Stripe Payment Gateway (Alternative/Backup)
# STRIPE_PUBLIC_KEY=your_stripe_public_key_here
# STRIPE_SECRET_KEY=your_stripe_secret_key_here
# STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Hero Variant & Video Background
# Options: modern | light | video | simple
NEXT_PUBLIC_HERO_VARIANT=modern
# Only used when NEXT_PUBLIC_HERO_VARIANT=video; falls back to local assets if unset
NEXT_PUBLIC_HERO_VIDEO_URL=
NEXT_PUBLIC_HERO_VIDEO_POSTER=
